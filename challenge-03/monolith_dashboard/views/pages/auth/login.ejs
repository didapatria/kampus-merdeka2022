<div class="auth-wrapper">
    <div class="auth-form">
        <div class="auth-content">
            <img src="/images/auth_logo.png" alt="Logo">
            <h1>Welcome, Admin BCR</h1>
            <% if (locals.error === true) { %> 
              <div class="alert alert-danger d-flex" role="alert">
                <i class="fa-solid fa-circle-exclamation mr-2 mt-1"></i> 
                <span>Masukkan username dan password yang benar. Perhatikan penggunaan huruf kapital.</span>
              </div>
            <% } %>
  
            <form action="/login" method="POST">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="username" id="email" placeholder="Contoh: johndee@gmail.com">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="6+ karakter">
                  </div>
                  <button type="submit" class="btn btn-block btn-auth">Sign In</button>
            </form>
        </div>
    </div>
</div>